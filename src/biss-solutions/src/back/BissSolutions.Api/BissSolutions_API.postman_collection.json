{
	"info": {
		"_postman_id": "biss-solutions-api-auth",
		"name": "Biss Solutions API - Autenticação",
		"description": "Collection para testar a API de Autenticação da Biss Solutions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{site-url}}/health",
					"host": [
						"{{site-url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Verifica se a API está funcionando"
			},
			"response": []
		},
		{
			"name": "Autenticação",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"jwt_token\", jsonData.token);",
									"    pm.environment.set(\"refresh_token\", jsonData.refreshToken);",
									"    console.log(\"Token salvo: \" + jsonData.token.substring(0, 50) + \"...\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@biss.com.br\",\n    \"password\": \"ChangeThisPassword123!\"\n}"
						},
						"url": {
							"raw": "{{site-url}}/api/admin/auth/login",
							"host": [
								"{{site-url}}"
							],
							"path": [
								"api",
								"admin",
								"auth",
								"login"
							]
						},
						"description": "Realiza login e obtém token JWT. O token é automaticamente salvo na variável 'jwt_token'."
					},
					"response": []
				},
				{
					"name": "Get Current User (Me)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{site-url}}/api/admin/auth/me",
							"host": [
								"{{site-url}}"
							],
							"path": [
								"api",
								"admin",
								"auth",
								"me"
							]
						},
						"description": "Obtém informações do usuário logado. Requer autenticação."
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{site-url}}/api/admin/auth/logout",
							"host": [
								"{{site-url}}"
							],
							"path": [
								"api",
								"admin",
								"auth",
								"logout"
							]
						},
						"description": "Realiza logout do usuário. Requer autenticação."
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados à autenticação"
		}
	],
	"variable": [
		{
			"key": "site-url",
			"value": "http://localhost:5000",
			"type": "string"
		}
	]
}

